void details()
{
char name[20];
long int contact;
int age;
int hno;
int mem;
char mail[30];
char street[30];
char city[20];
char state[20];
char vechile[20];
char place[20];
FILE *fp;
fp=fopen("tourntravels.txt","a");
if (fp==NULL)
{
printf("FILE DOESNT EXIST");
}
else
printf("\n COMPLETE YOUR PERSONAL DETAILS... ");
printf("\n NAME => ");
scanf("%s",name);
fprintf(fp,"NAME = %s \n ",name);
printf("\n AGE => ");
scanf("%d",age);
fprintf(fp,"AGE = %d \n ",age);
printf("\n TOTAL NO OF MEMBER => ");
scanf("%d",mem);
fprintf(fp,"NO OF MEMBER = %d \n ",mem);
printf("\n CONTACT NO => ");
scanf("%d",contact);
fprintf(fp,"CONTACT NO. = %d \n ",contact);
printf("\n MAIL-ID => ");
scanf("%s",mail);
fprintf(fp,"MAIL-ID = %s \n",mail);
printf("\n HOUSE NO => ");
scanf("%d",hno);
fprintf(fp,"HNO = %d \n",hno);
printf("\n STREET NAME => ");
scanf("%s",street);
fprintf(fp,"STREET NAME = %s \n ",street);
printf("\n CITY => ");
scanf("%s",city);
fprintf(fp,"CITY = %s \n ",city);
printf(" \n STATE => ");
scanf("%s",state);
fprintf(fp,"STATE = %s \n ",state);
printf("\n VECHILE => ");
scanf("%s",vechile);
fprintf(fp,"VECHILE = %s \n",vechile);
printf("\n PLACE => ");
scanf("%s",place);
fprintf(fp,"PLACE = %s \n",place);
printf("\n YOUR DETAILS ARE PERMANENTLY SAVED");
fclose(fp);
}
void payment()
{
FILE *fp;
fp=fopen("tourntravpay.txt","a");
if (fp==NULL)
{
printf("FILE DOESNT EXIST");
}
else
{
printf("\n NAME => ");
scanf("%s",name);
fprintf(fp,"NAME = %s \n ",name);
printf("\n AGE => ");
scanf("%d",age);
fprintf(fp,"AGE = %d \n ",age);
printf("\n TOTAL NO OF MEMBER => ");
scanf("%d",mem);
fprintf(fp,"NO OF MEMBER = %d \n ",mem);
printf("\n CARD NO => ");
scanf("%d",card);
fprintf(fp,"CARD NO. = %s \n",card);
printf("\n CVV => ");
scanf("%d",cvv);
fprintf(fp,"CVV = %d \n",cvv);
printf(" \n PIN => ");
scanf("%d",pin);
fprintf(fp,"PIN = %d \n",pin);
printf("\n TRANSACTION IS BEING PROCEED , PLEASE WAIT... ");
printf(".");
delay(50);
printf(".");
delay(50);
printf(".");
delay(50);
printf("\n TRANSACTION COMPLETED... ");
delay(50);
printf("\n THANK YOU... ");
fclose(fp);
}
}
void information()
{
int a;
char b;
do
{
printf("\n 1. ENTER DETAILS ");
printf("\n 2. PAYMENT ");
printf("\n 3. TERMS AND CONDITIONS ");
scanf("%d",&a);
switch(a)
{
case 1:
details();
break;
case 2:
payment();
break;
default:
printf("\n invalid choice");
}
printf("\n YOU WANT TO CONTINUE... ");
scanf("%s",&b);
}
while(b=='y'||b=='Y');
}
